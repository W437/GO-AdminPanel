# Application Debug Mode
# When true: Shows detailed error messages with stack traces (development only)
# When false: Shows generic error pages (production)
# IMPORTANT: Always set to false in production!
APP_DEBUG=false

# Application Installation Status
# Set to true after installation is complete
# Prevents re-running installation wizard
APP_INSTALL=true

# Application Log Level
# Options: emergency, alert, critical, error, warning, notice, info, debug
# Controls which log messages are recorded
APP_LOG_LEVEL=debug

# Application Mode
# Options: dev, live, maintenance
# Controls application behavior and access
APP_MODE=live

# Application URL
# The base URL of your application (without trailing slash)
# Used for generating absolute URLs in emails, notifications, etc.
# For local: http://localhost:8000
# For production: https://yourdomain.com
APP_URL=http://localhost:8000

# Application Key
# A 32-character random string used for encryption
# Generated automatically with: php artisan key:generate
# Keep this secret and never share it!
